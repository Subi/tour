generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Patch {
  id         Int     @id @default(autoincrement())
  state      String?
  date       String
  imageUrl  String?
  isApproved Boolean
  Author     Author  @relation(fields: [authorId], references: [id])
  authorId   Int
}

model Author {
  id       Int     @id @default(autoincrement())
  username String?
  email    String?
  Patch    Patch[]
  isBanned Boolean
}

